{
  "compilerOptions": {
    // "jsxImportSource": "@types/react",
    // "types": ["@types/react"],

    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    // "moduleResolution": "bundler",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@components/*": ["components/*"],
      "@pages/*": ["pages/*"],
      "@styles/*": ["styles/*"],
      "@utils/*": ["utils/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "public/icons/blood-colored.jsx",
    "public/icons/blood-transparent.jsx",
    "public/icons/randomSvg.js",
    "components/ui/dialog.jsx",
    "components/common/mySwitch.jsx",
    "captcha.js"
  ],
  "exclude": ["node_modules"]
}
